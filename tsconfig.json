{
  "compilerOptions": {
    "noEmitOnError": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2016",
    "module": "CommonJS",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "alwaysStrict": true,
    "strict": true,
    "baseUrl": "src",
    "outDir": "./dist/",
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ],
    "typeRoots": ["node_modules/@types", "ts-helper-types"],
    "paths": {
      "@@functions/*": ["functions/*"],
      "@@models/*": ["models/*"],
      "@@schemas/*": ["schemas/*"],
      "@@services/*": ["services/*"],
      "@@utils/*": ["utils/*"],
      "@@validators/*": ["validators/*"],
    },
  },
}
